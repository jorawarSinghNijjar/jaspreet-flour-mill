<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import javafx.scene.control.Hyperlink?>
<GridPane alignment="CENTER"
          xmlns="http://javafx.com/javafx/8.0.171"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.jaspreetFlourMill.accountManagement.controllers.AuthController"
          hgap="10"
          vgap="10"
          styleClass="root"
>
    <Text styleClass="h2"
          GridPane.halignment="CENTER"
          GridPane.columnIndex="0"
          GridPane.columnSpan="2">Login
    </Text>
    <Label styleClass="label"
           GridPane.rowIndex="1"
           GridPane.columnIndex="0">Username:
    </Label>
    <TextField GridPane.rowIndex="1"
               GridPane.columnIndex="1"
               fx:id="userIdField"
    ></TextField>
    <Label styleClass="label"
           GridPane.rowIndex="2"
           GridPane.columnIndex="0">Password:
    </Label>
    <PasswordField GridPane.rowIndex="2"
                   GridPane.columnIndex="1"
                   fx:id="passwordField"
    />
    <Hyperlink styleClass="small-text"
               GridPane.rowIndex="3"
               GridPane.columnIndex="1">Forgot Password ?
    </Hyperlink>
    <Button styleClass="primary-btn"
               GridPane.rowIndex="4"
               GridPane.columnIndex="1"
               GridPane.halignment="RIGHT"
                   onAction="#handleLogin"
    >


        Login
    </Button>
    <stylesheets>
        <URL value="@css/main.css"/>
    </stylesheets>
</GridPane>
