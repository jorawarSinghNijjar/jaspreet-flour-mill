<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane fx:id="baseContainer" minHeight="768.0" minWidth="1366.0" prefHeight="768.0" prefWidth="1366.0" stylesheets="@css/main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jaspreetFlourMill.accountManagement.controllers.ContentController">
   <children>
      <Label fx:id="contentAreaTitleLabel" contentDisplay="TEXT_ONLY" stylesheets="@css/main.css" text="Title">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <styleClass>
            <String fx:value="title-label" />
            <String fx:value="p-5" />
         </styleClass>
      </Label>
      <VBox id="menu" fx:id="sideMenuBox" alignment="TOP_CENTER" prefHeight="776.0" prefWidth="230.0" stylesheets="@css/main.css">
         <children>
            <Circle fx:id="avatarFrame" cache="true" fill="DODGERBLUE" radius="59.0" stroke="BLACK" strokeType="INSIDE" />
            <Button fx:id="homeButton" mnemonicParsing="false" onAction="#showHome" prefHeight="60.0" prefWidth="229.0" stylesheets="@css/main.css" text="Home">
               <styleClass>
                  <String fx:value="menu-btn" />
                  <String fx:value="h4" />
               </styleClass>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="customersButton" mnemonicParsing="false" onAction="#showCustomers" prefHeight="60.0" prefWidth="229.0" stylesheets="@css/main.css" text="Customers">
               <styleClass>
                  <String fx:value="menu-btn" />
                  <String fx:value="h4" />
               </styleClass>
            </Button>
            <Button fx:id="addTransactionButton" mnemonicParsing="false" onAction="#showAddTransaction" prefHeight="60.0" prefWidth="229.0" stylesheets="@css/main.css" text="Add Transaction">
               <styleClass>
                  <String fx:value="menu-btn" />
                  <String fx:value="h4" />
               </styleClass>
            </Button>
            <Button fx:id="wheatDepositButton" mnemonicParsing="false" onAction="#showDepositWheat" prefHeight="60.0" prefWidth="229.0" stylesheets="@css/main.css" text="Wheat Deposit">
               <styleClass>
                  <String fx:value="menu-btn" />
                  <String fx:value="h4" />
               </styleClass>
            </Button>
            <Button fx:id="registerCustomerButton" mnemonicParsing="false" onAction="#showRegisterCustomer" prefHeight="60.0" prefWidth="229.0" stylesheets="@css/main.css" text="Register Customer">
               <styleClass>
                  <String fx:value="menu-btn" />
                  <String fx:value="h4" />
               </styleClass>
            </Button>
            <Button fx:id="registerEmployeeButton" mnemonicParsing="false" onAction="#showRegisterEmployee" prefHeight="60.0" prefWidth="229.0" stylesheets="@css/main.css" text="Register Employee">
               <styleClass>
                  <String fx:value="menu-btn" />
                  <String fx:value="h4" />
               </styleClass>
            </Button>
            <Button fx:id="signOutButton" mnemonicParsing="false" onAction="#signOut" prefHeight="60.0" prefWidth="229.0" stylesheets="@css/main.css" text="Sign Out">
               <styleClass>
                  <String fx:value="menu-btn" />
                  <String fx:value="h4" />
               </styleClass>
            </Button>
         </children>
         <padding>
            <Insets top="40.0" />
         </padding>
      </VBox>
      <AnchorPane fx:id="contentContainer" prefHeight="768.0" prefWidth="907.0" />
   </children>
</AnchorPane>
